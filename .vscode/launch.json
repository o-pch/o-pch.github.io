{
  // VS Code launch configuration to open the site in Chrome and ensure the server task runs first
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome (http://localhost:8000)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Run Python HTTP Server",
      "runtimeExecutable": "C:/Program Files/Google/Chrome/Application/chrome.exe",
      "userDataDir": "${workspaceFolder}/.vscode/chrome",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
